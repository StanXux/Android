<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_left_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="除中心外，\n点击其他view可删"
        android:textAllCaps="false"
        android:onClick="click2Del"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_center"
        android:text="左对齐"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:onClick="click2Del" />

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/tv_center"
        android:text="右对齐"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:onClick="click2Del" />

    <TextView
        android:id="@+id/tv_top"
        android:textColor="@color/material400Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tv_center"
        android:text="上对齐"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:onClick="click2Del" />

    <TextView
        android:textColor="@color/material400Green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_center"
        android:text="下对齐"
        android:textAllCaps="false"
        android:textSize="13sp"
        android:onClick="click2Del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="左下角"
        android:textAllCaps="false"
        android:onClick="click2Del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:text="右上角"
        android:textAllCaps="false"
        android:onClick="click2Del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="右下角"
        android:textAllCaps="false"
        android:onClick="click2Del" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_center"
        android:text="抖音"
        android:textAllCaps="false"
        android:onClick="click2Del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_center"
        android:text="火山"
        android:textAllCaps="false"
        android:onClick="click2Del" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_center"
        android:layout_centerHorizontal="true"
        android:text="西瓜"
        android:textAllCaps="false"
        android:onClick="click2Del" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_center"
        android:layout_centerHorizontal="true"
        android:text="头条"
        android:textAllCaps="false"
        android:onClick="click2Del" />

    <TextView
        android:background="#c90"
        android:padding="16dp"
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/colorAccent"
        android:textSize="28sp" />


</RelativeLayout>